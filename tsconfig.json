{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./packages",
    "baseUrl": ".",
    "paths": {
      "@virastar/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "./packages/cli" },
    { "path": "./packages/core" }
  ]
}
