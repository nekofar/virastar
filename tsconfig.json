{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2017",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "./lib",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "**/__tests__/*", "**/*.test.ts", "**/*.spec.ts"]
}
